@model MVC_projesi.Models.varlik.tbl_kategori

@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/AnaLayout.cshtml";
}

@using (@Html.BeginForm("GuncellemeIslemi", "Kategori", FormMethod.Post))
{
<div class="form-group">
    @Html.LabelFor(m => m.KATEGORIID)
    @Html.TextBoxFor(m => m.KATEGORIID, new { @class = "width=150 height=45" })
    <br /><br />
    @Html.LabelFor(m => m.KATEGORIAD)
    @Html.TextBoxFor(m => m.KATEGORIAD, new { @class = "width=150 height=45" })
    <br /><br />

    <button class="btn btn-warning">Onayla</button>
</div>
}

