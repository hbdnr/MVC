@model MVC_projesi.Models.varlik.tbl_satislar

    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/AnaLayout.cshtml";
    }

    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#Modal1">Satış</button>


    <div class="modal" id="Modal1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">Bilgiler ve Yardım</h2>
                </div>
                <form method="post" action="/Satis/YeniSatis">
                    <div class="modal-body">
                        <label>
                            Ürün
                        </label>
                        @Html.TextBoxFor(m => m.URUN, new { @class = "form-control" })
                        <br />

                        <label>
                            Müşteri Adı ve Soyadı
                        </label>
                        @Html.TextBoxFor(m => m.MUSTERI, new { @class = "form-control" })
                        <br />

                        <label>
                            Adet
                        </label>
                        @Html.TextBoxFor(m => m.ADET, new { @class = "form-control" })
                        <br />

                        <label>
                            Fiyat
                        </label>
                        @Html.TextBoxFor(m => m.FIYAT, new { @class = "form-control" })
                        <br />

                        <button class="btn btn-primary">Kaydet</button>
                        <button class="btn btn-danger" data-dismiss="modal">Vazgeç</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


